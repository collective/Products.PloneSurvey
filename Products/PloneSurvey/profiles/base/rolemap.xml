<?xml version="1.0"?>
<rolemap>
  <permissions>
    <permission name="PloneSurvey: Add Survey"
                acquire="True">
      <role name="Contributor"/>
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
    </permission>
    <permission name="PloneSurvey: Reset Own Responses"
                acquire="True">
      <role name="Manager"/>
      <role name="Member"/>
    </permission>
    <permission name="PloneSurvey: View Survey Results"
                acquire="True">
      <role name="Contributor"/>
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Reviewer"/>
    </permission>
  </permissions>
</rolemap>
